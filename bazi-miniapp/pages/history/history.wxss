/* pages/history/history.wxss */

.container {
  min-height: 100vh;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 记录列表 */
.records-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.record-item {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.record-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

/* 记录头部 */
.record-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.record-name {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.name-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.gender-badge {
  display: inline-block;
  padding: 4rpx 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.record-date {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.date-text {
  font-size: 24rpx;
  color: #999;
}

/* 八字信息 */
.record-bazi {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.bazi-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 10rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
}

.bazi-label {
  font-size: 20rpx;
  color: #999;
}

.bazi-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 记录底部 */
.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.time-icon {
  font-size: 24rpx;
}

.time-text {
  font-size: 22rpx;
  color: #999;
}

.record-actions {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #FFF3E0;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.record-actions:active {
  background: #FFE0B2;
}

.delete-icon {
  font-size: 24rpx;
}

.delete-text {
  font-size: 22rpx;
  color: #F57C00;
}

/* 加载状态 */
.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  padding: 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.8;
}

.empty-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 60rpx;
}

.empty-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #FFFFFF;
  color: #667eea;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.empty-btn::after {
  border: none;
}
