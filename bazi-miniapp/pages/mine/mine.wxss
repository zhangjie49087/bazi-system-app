/* pages/mine/mine.wxss */

.container {
  min-height: 100vh;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 用户信息卡片 */
.user-card {
  position: relative;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.user-info.guest {
  opacity: 0.6;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #F5F5F5;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: linear-gradient(135deg, #E0E0E0 0%, #BDBDBD 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  font-size: 60rpx;
  color: #FFFFFF;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.welcome {
  font-size: 24rpx;
  color: #999;
}

.login-btn {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  border-radius: 30rpx;
  font-size: 26rpx;
  border: none;
  padding: 0;
}

.login-btn::after {
  border: none;
}

.btn-text {
  color: #FFFFFF;
}

/* 统计信息卡片 */
.stats-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.stats-grid {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 2rpx;
  height: 80rpx;
  background: #E0E0E0;
}

/* 通用卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 快捷操作 */
.action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 40rpx 20rpx;
  background: #F8F8F8;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  background: #F0F0F0;
  transform: scale(0.98);
}

.action-icon {
  font-size: 48rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666;
}

/* 设置列表 */
.settings-list {
  display: flex;
  flex-direction: column;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #F5F5F5;
  transition: background 0.3s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: #F8F8F8;
  margin: 0 -30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.setting-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.setting-icon {
  font-size: 40rpx;
  width: 60rpx;
  text-align: center;
}

.setting-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.setting-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.setting-desc {
  font-size: 22rpx;
  color: #999;
}

.setting-arrow {
  font-size: 48rpx;
  color: #CCCCCC;
  font-weight: 300;
  line-height: 1;
}

/* 版权信息 */
.copyright {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 60rpx 20rpx 40rpx;
}

.copyright-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
}
