/* pages/result/result.wxss */

.container {
  min-height: 100vh;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 顶部装饰 */
.header-decoration {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  padding: 40rpx 0;
}

.decoration-circle {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.6);
}

/* 通用卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.card-subtitle {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 基本信息卡片 */
.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-item.full-width {
  grid-column: 1 / -1;
}

.info-label {
  font-size: 24rpx;
  color: #999;
}

.info-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

/* 四柱八字表格 */
.bazi-table {
  overflow-x: auto;
}

.bazi-row {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.bazi-row:last-child {
  margin-bottom: 0;
}

.bazi-row.header-row .bazi-cell {
  background: #F5F5F5;
  color: #666;
  font-weight: bold;
  font-size: 26rpx;
  padding: 20rpx 10rpx;
}

.bazi-cell {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 10rpx;
  border-radius: 12rpx;
  background: #F8F8F8;
  min-height: 100rpx;
  gap: 8rpx;
}

.gan-text,
.zhi-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.wx-text {
  font-size: 22rpx;
  color: #666;
}

.bazi-row.nayin-row .bazi-cell {
  background: #FFF3E0;
  color: #F57C00;
  font-size: 24rpx;
  font-weight: 500;
  padding: 16rpx 10rpx;
  min-height: auto;
}

/* 五行背景色 */
.wuxing-bg-金 {
  background: linear-gradient(135deg, #FFF9E6 0%, #FFE8B3 100%) !important;
  color: #D4AF37 !important;
}

.wuxing-bg-木 {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%) !important;
  color: #4CAF50 !important;
}

.wuxing-bg-水 {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%) !important;
  color: #2196F3 !important;
}

.wuxing-bg-火 {
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%) !important;
  color: #F44336 !important;
}

.wuxing-bg-土 {
  background: linear-gradient(135deg, #EFEBE9 0%, #D7CCC8 100%) !important;
  color: #8D6E63 !important;
}

/* 十神配置表格 */
.shishen-table {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.shishen-row {
  display: grid;
  grid-template-columns: 120rpx repeat(4, 1fr);
  gap: 12rpx;
  align-items: center;
}

.shishen-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  text-align: center;
}

.shishen-cell {
  background: #F5F5F5;
  padding: 20rpx 10rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.shishen-cell.highlight {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  font-weight: bold;
}

/* 神煞信息 */
.shensha-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.shensha-item {
  display: flex;
  gap: 20rpx;
  align-items: flex-start;
}

.shensha-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  min-width: 80rpx;
  padding-top: 8rpx;
}

.shensha-tags {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.shensha-tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: #F0F0F0;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

/* 五行统计 */
.wuxing-stats {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.wuxing-item {
  display: grid;
  grid-template-columns: 100rpx 1fr 80rpx;
  gap: 16rpx;
  align-items: center;
}

.wuxing-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.wuxing-name {
  font-size: 28rpx;
  font-weight: bold;
}

.wuxing-count {
  font-size: 24rpx;
  color: #999;
}

.wuxing-bar {
  height: 24rpx;
  background: #F0F0F0;
  border-radius: 12rpx;
  overflow: hidden;
}

.wuxing-fill {
  height: 100%;
  border-radius: 12rpx;
  transition: width 0.3s ease;
}

.wuxing-percent {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

.wuxing-lack {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  background: #FFF3E0;
  border-radius: 12rpx;
}

.lack-icon {
  font-size: 32rpx;
}

.lack-text {
  font-size: 26rpx;
  color: #F57C00;
  font-weight: 500;
}

/* 命理分析 */
.analysis-section {
  margin-bottom: 40rpx;
}

.analysis-section:last-child {
  margin-bottom: 0;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.section-icon {
  font-size: 36rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.section-content {
  padding-left: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.highlight-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
  line-height: 1.6;
}

.normal-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 大运信息 */
.dayun-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.dayun-item {
  display: grid;
  grid-template-columns: 120rpx 1fr 150rpx;
  gap: 20rpx;
  align-items: center;
  padding: 24rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
}

.dayun-age {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

.dayun-ganzhi {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.dayun-year {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 120rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.action-btn::after {
  border: none;
}

.btn-icon {
  font-size: 40rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #666;
}

/* 底部说明 */
.footer-note {
  padding: 40rpx 20rpx;
  text-align: center;
}

.note-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 60rpx;
}

.empty-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #FFFFFF;
  color: #667eea;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.empty-btn::after {
  border: none;
}
